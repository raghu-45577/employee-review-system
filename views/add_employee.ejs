<link rel="stylesheet" href="/css/add_employee.css" />
<div class="container">
  <form action="/user/add" method="post" class="add-employee-form">
    <div class="input">
      <input type="text" name="name" placeholder="Employee Name" required />
    </div>
    <div class="input">
      <input type="email" name="emailId" placeholder="Email Id" required />
    </div>
    <div class="input">
      <input type="password" name="password" placeholder="password" required />
    </div>
    <div class="button">
      <input class="btn" type="submit" value="Add Employee" />
    </div>
  </form>
</div>
